datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")  // pooled
  directUrl = env("DIRECT_URL")    // direct (required for migrations)
}

generator client {
  provider = "prisma-client-js"
}

model Project {
  id        String   @id @default(cuid())
  name      String
  category  String?
  createdAt DateTime @default(now())
}

model Competitor {
  id        String   @id @default(cuid())
  projectId String
  name      String
  website   String?
  aliases   String[]
}

model QueryRun {
  id         String   @id @default(cuid())
  projectId  String
  status     String   // queued | collecting | done | failed
  startedAt  DateTime @default(now())
  finishedAt DateTime?
}

model RawHit {
  id        String   @id @default(cuid())
  runId     String
  source    String   // google | reddit | g2 (today: google only)
  url       String
  title     String
  snippet   String?
  html      String?
  createdAt DateTime @default(now())
}
